<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
        name="email"
        type="com.materialstudies.reply.data.Email" />
  </data>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="@dimen/grid_2"
      android:layout_marginStart="@dimen/grid_2"
      android:layout_marginVertical="@dimen/grid_4"
      android:layout_marginHorizontal="@dimen/grid_0_5">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingTop="@dimen/grid_2"
          android:paddingBottom="@dimen/grid_2">
        <TextView
            android:id="@+id/subject_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_marginStart="@dimen/grid_2"
            android:text="@{email.subject}"
            android:textAppearance="@style/TextAppearance.Reply.EmailSubject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="High school reunion" />
        <!-- TODO: Update this with dynamic data (text)-->
        <TextView
            android:id="@+id/num_messages_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 more messages"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_marginStart="@dimen/grid_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subject_text_view"
            tools:text="3 more messages" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_delete_button"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_delete"
            app:iconSize="24dp"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="7dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_settings_button"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_settings"
            app:iconSize="24dp"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="7dp" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
  </FrameLayout>
</layout>
